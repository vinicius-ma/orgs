<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="8dp"
    android:paddingVertical="5dp"
    android:paddingHorizontal="8dp"
    android:background="@color/cardview_shadow_end_color"
    app:cardBackgroundColor="@color/purple_200"
    app:cardCornerRadius="15dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <!-- PRODUCT ITEM NAME -->
        <TextView
            android:id="@+id/product_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/product_item_price_cardView"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="3dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp"
            tools:text="Salada mista"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/primary_text_light"
            />
        <!-- PRODUCT ITEM DESCRIPTION -->
        <TextView
            android:id="@+id/product_item_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/product_item_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/product_item_name"
            app:layout_constraintEnd_toEndOf="@id/product_item_name"
            android:layout_marginBottom="3dp"
            tools:text="Laranja, banana e maçã"
            android:textStyle="italic"
            android:textSize="12sp"
            android:textColor="@android:color/secondary_text_light"
            />
        <!-- PRODUCT ITEM PRICE CARD VIEW -->
        <androidx.cardview.widget.CardView
            android:id="@+id/product_item_price_cardView"
            android:layout_width="95dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/product_item_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="0dp"
            >
            <!-- PRODUCT ITEM PRICE -->
            <TextView
                android:id="@+id/product_item_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:gravity="center"
                tools:text="R$ 5,00"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                android:background="@android:color/darker_gray"
                />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>